<!-- DeviceDialog.xaml -->
<Window x:Class="VNCManagerView.DeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device Configuration" Height="620" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Same button styles as AddEditDialog -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="2" Color="#40000000" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform" 
                                                       Storyboard.TargetProperty="ScaleX" 
                                                       To="1.05" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform" 
                                                       Storyboard.TargetProperty="ScaleY" 
                                                       To="1.05" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform" 
                                                       Storyboard.TargetProperty="ScaleX" 
                                                       To="1" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform" 
                                                       Storyboard.TargetProperty="ScaleY" 
                                                       To="1" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border x:Name="DialogBorder" 
            Background="White" 
            CornerRadius="12" 
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#30000000" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Fixed Header -->
                <RowDefinition Height="*"/>
                <!-- Scrollable Content -->
                <RowDefinition Height="Auto"/>
                <!-- Fixed Buttons -->
            </Grid.RowDefinitions>

            <!-- Fixed Header -->
            <Border Grid.Row="0"
                    CornerRadius="8" 
                    Padding="20,16" 
                    Margin="30,30,30,24">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="💻" 
                             FontSize="24" 
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,8"/>
                    <TextBlock Text="Device Configuration" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="White"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Scrollable Input Fields -->
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         Padding="30,0,30,10">
                <StackPanel>
                    <!-- Branch Selection -->
                    <Label Content="Branch:" 
                           FontWeight="SemiBold" 
                           FontSize="13"
                           Foreground="#34495E"
                           Margin="0,0,0,6"/>
                    <Border Background="#F8F9FA" 
                            CornerRadius="6" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1"
                            Margin="0,0,0,16">
                        <ComboBox Name="BranchComboBox" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="12,8" 
                                 FontSize="13"
                                 DisplayMemberPath="Name"
                                 SelectionChanged="BranchComboBox_SelectionChanged"/>
                    </Border>

                    <!-- Plant Selection -->
                    <Label Content="Plant:" 
                           FontWeight="SemiBold" 
                           FontSize="13"
                           Foreground="#34495E"
                           Margin="0,0,0,6"/>
                    <Border Background="#F8F9FA" 
                            CornerRadius="6" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1"
                            Margin="0,0,0,16">
                        <ComboBox Name="PlantComboBox" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="12,8" 
                                 FontSize="13"
                                 DisplayMemberPath="Name"/>
                    </Border>

                    <!-- Device Name -->
                    <Label Content="Device Name:" 
                           FontWeight="SemiBold" 
                           FontSize="13"
                           Foreground="#34495E"
                           Margin="0,0,0,6"/>
                    <Border Background="#F8F9FA" 
                            CornerRadius="6" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1"
                            Margin="0,0,0,16">
                        <TextBox Name="NameTextBox" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="12,10" 
                                 FontSize="13"/>
                    </Border>

                    <!-- IP Address -->
                    <Label Content="IP Address:" 
                           FontWeight="SemiBold" 
                           FontSize="13"
                           Foreground="#34495E"
                           Margin="0,0,0,6"/>
                    <Border Background="#F8F9FA" 
                            CornerRadius="6" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1"
                            Margin="0,0,0,16">
                        <TextBox Name="IPTextBox" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="12,10" 
                                 FontSize="13"/>
                    </Border>

                    <!-- Port -->
                    <Label Content="Port:" 
                           FontWeight="SemiBold" 
                           FontSize="13"
                           Foreground="#34495E"
                           Margin="0,0,0,6"/>
                    <Border Background="#F8F9FA" 
                            CornerRadius="6" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1"
                            Margin="0,0,0,16">
                        <TextBox Name="PortTextBox" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="12,10" 
                                 FontSize="13"/>
                    </Border>

                    <!-- Password -->
                    <Label Content="Password (optional):" 
                           FontWeight="SemiBold" 
                           FontSize="13"
                           Foreground="#34495E"
                           Margin="0,0,0,6"/>
                    <Border Background="#F8F9FA" 
                            CornerRadius="6" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1"
                            Margin="0,0,0,24">
                        <PasswordBox Name="PasswordTextBox" 
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Padding="12,10" 
                                   FontSize="13"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Fixed Action Buttons -->
            <Border Grid.Row="2" 
                    Background="White"
                    Padding="30,10,30,20"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#E0E0E0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="✓ Save Device" 
                            Click="OK_Click" 
                            IsDefault="True" 
                            Style="{StaticResource DialogButtonStyle}"
                            Margin="0,0,12,0"/>
                    <Button Content="✕ Cancel" 
                            Click="Cancel_Click" 
                            IsCancel="True" 
                            Style="{StaticResource CancelButtonStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>