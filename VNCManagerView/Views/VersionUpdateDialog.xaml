<Window x:Class="VNCManagerView.VersionUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" 
        Height="320" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Primary Button -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#30000000" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Center">
                <!-- Modern update icon -->
                <Path Data="M13.5,1A12.5,12.5 0 1,0 26,13.5H23A9.5,9.5 0 1,1 13.5,4V1Z M13.5,7V14L18.5,17"
                      Fill="#007ACC" Width="40" Height="40" Stretch="Uniform" Margin="0,0,10,0"/>
                <TextBlock Text="Update Available" FontSize="20" FontWeight="Bold" 
                           Foreground="#2C3E50" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- CONTENT -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                <!-- Version Numbers -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="Current" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="CurrentVersionText" Text="v1.0.0"
                                   FontSize="18" FontWeight="Bold" Foreground="#95A5A6"/>
                    </StackPanel>

                    <TextBlock Text="→" FontSize="22" FontWeight="Bold" Foreground="#34495E" VerticalAlignment="Center" Margin="10,0"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock Text="Latest" FontSize="12" Foreground="#27AE60" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LatestVersionText" Text="v1.1.2"
                                   FontSize="18" FontWeight="Bold" Foreground="#27AE60"/>
                    </StackPanel>
                </StackPanel>

                <!-- Changelog -->
                <Border Background="#F8F9FA" CornerRadius="8" Padding="10" Width="380">
                    <StackPanel>
                        <TextBlock Text="What's New:" FontWeight="SemiBold" Foreground="#2C3E50" FontSize="13" Margin="0,0,0,6"/>
                        <TextBlock x:Name="ChangelogLink" Text="View Full Changelog →" 
                                   Foreground="#007ACC" FontSize="12" Cursor="Hand" Margin="0,8,0,0"
                                   TextDecorations="Underline"
                                   MouseDown="ChangelogLink_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Update Now" Width="130" Height="36"
                        x:Name="UpdateNowButton"
                        Style="{StaticResource DialogButtonStyle}" Margin="0,0,12,0"
                        Click="UpdateNow_Click"/>
                <Button Content="Later" Width="100" Height="36" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
